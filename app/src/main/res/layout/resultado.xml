<?xml version="1.0" encoding="utf-8"?>

<ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
                android:id="@+id/imagemPlacas"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:src="@drawable/placa"/>


        <TextView
            android:id="@+id/resultadoPlacas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" />

    <ImageView
            android:id="@+id/imagemInversor"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/inversor" />

    <TextView
            android:id="@+id/resultadoInversor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
                                                     />

    <ImageView
            android:id="@+id/imagemTamanho"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/tamanho" />

    <TextView
            android:id="@+id/resultadoTamanho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/ggeracao" />

    <TextView
            android:id="@+id/resultadoGeracao"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"

                                                      />

    <ImageView
            android:id="@+id/imagemCusto"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/custo" />


    <TextView
            android:id="@+id/resultadoCusto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" />


    <ImageView
            android:id="@+id/imagemInstalacao"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/instalacao" />


    <TextView
            android:id="@+id/resultadoInstalacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" />


    <ImageView
            android:id="@+id/imagemEconomia"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/economia" />

    <TextView
            android:id="@+id/resultadoEconomia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
           />

    <ImageView
            android:id="@+id/imagemRetorno"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/retorno" />

    <TextView
            android:id="@+id/resultadoRetorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" />

    <Button
            android:id="@+id/financiamento"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/botao_redondo"
            android:textColor="@color/Branco"
            android:text="@string/Financiamentos"

            />


</LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>